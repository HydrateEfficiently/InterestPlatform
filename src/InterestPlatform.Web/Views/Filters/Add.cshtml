@model CreateFilterRequest

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Filters" asp-action="Add" asp-route-path="@ViewData["Path"]" method="post" class="form-horizontal clearfix" role="form">
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

            <h3>Create Descrete Filter</h3>

            <input asp-for="FilterType" value="@FilterType.Discrete" type="hidden" />

            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Options" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Options" class="form-control" />
                    <span asp-validation-for="Options" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn">Create</button>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-12">
        <form asp-controller="Filters" asp-action="Add" asp-route-path="@ViewData["Path"]" method="post" class="form-horizontal clearfix" role="form">
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

            <h3>Create Continuous Filter</h3>

            <input asp-for="FilterType" value="@FilterType.Continuous" type="hidden" />

            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="MinimumValue" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="MinimumValue" class="form-control" />
                    <span asp-validation-for="MinimumValue" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="MaximumValue" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="MaximumValue" class="form-control" />
                    <span asp-validation-for="MaximumValue" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn">Create</button>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-12">
        <form asp-controller="Filters" asp-action="Add" asp-route-path="@ViewData["Path"]" method="post" class="form-horizontal clearfix" role="form">
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

            <h3>Create Switch Filter</h3>

            <input asp-for="FilterType" value="@FilterType.Switch" type="hidden" />

            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>